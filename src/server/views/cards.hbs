<main>

    <style>
        .cardList {

            padding: 10px;
            font-size: 14px;
            width:50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            list-style: none;
            border: 1px solid gray;
            border-radius: 10px;
        }

        .cardList li {

            width: 250px;
            height: 140px;
            padding: 10px;
            border: 1px solid gray;
            border-radius: 8px;

        }

        .delete {

            color: white;
            background-color: red;
            border: 1px solid white;
            border-radius: 8px;
            padding: 5px;
        }

    </style>

    <h2>Welcome! Here are the cards, registered on your name:</h2>

    <ul class="cardList">

        {{#each cards}}

        <li id={{this._id}}>
            <p> {{this.cardholder}}</p>
            <p> {{this.card_number}}</p>
            <p> {{this.expiration}}</p>

            <a class="delete" href="/deleteCard/{{this._id}}">

                Delete card

            </a>

        </li>

        {{/each}}



    </ul>

    <form class="default" action="/createCard" method="post">

        <div class="container">
            <select name="schemaProvider" id="schemaProvider">

                <option value="3">Amex</option>
                <option value="4">Visa</option>
                <option value="5">Mastercard</option>

            </select>

        </div>

        <div class="container">

            <input type="submit" value="Create Card">

        </div>

        {{#if err}}
        <div class="container">

            <div class="err">{{err.message}}</div>

        </div>
        {{/if}}

    </form>




</main>